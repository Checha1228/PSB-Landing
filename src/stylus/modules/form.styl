.form-program
	margin 16px auto 0
	width 90%

    .group-form
		display inline-block
		height 56px
		margin-bottom 8px
		position relative
		width 100%
		
		input:focus ~ label,
		select:focus ~ label,
		input:valid ~ label,
		select:valid ~ label
			color $moradopsb
			font-size 64%
			font-weight $bold
			left 0		
			top 38px
			transform translate3d(0, -208%, 0)
		
		.label-default
			color $grisclaro
			font-family $robot
			font-size 0.8rem
			font-weight $light
			left 12px
			position absolute
			top 33px
			transition all 0.4s
		
		.input-default,
		.select-default
			border 1px solid $grisclaro
			border-radius 12px
			color $grisclaro
			font-family $roboto
			font-size 0.8rem
			font-weight $light
			height 30px
			margin-top 24px
			padding 0 8px
			width 94%
		
		.select-default
			appearance none
			width 100%

			&.arrow-select
				background-image linear-gradient(to top right, transparent 50%, gray 50%), linear-gradient(to bottom right, gray 50%, transparent 50%)
				background-position calc(100% - 20px) calc(1em + 2px), calc(100% - 15px) calc(1em + 2px), calc(100% - .5em) .5em
				background-size 5px 5px, 5px 5px, 1.5em 1.5em
				background-repeat no-repeat

		
		.cont-check-terms
			display block
			cursor pointer
			font-size 22px
			height 22px
			margin 20px auto
			padding-left 44px
			position relative
			user-select none
			width 80%

			.text-input-terms
				color $grisclaro
				font-weight $light
				font-size 0.9rem
			input 
				cursor pointer
				opacity 0
				position absolute
				&:checked 
					& ~ .icon-checkmark 
						background-position 2px 5px 
						background-image url('../images/img-icon-checkmark.png')
						background-repeat no-repeat 
					
						&.bg-fucsia
							background-color $fucsia
							border 5px solid $fucsia
						
						&.bg-rojo
							background-color $rojo
							border 5px solid $rojo

						&.bg-amarillo
							background-color $amarillo
							border 5px solid $amarillo
						
						&.bg-azul
							background-color $azul
							border 5px solid $azul
						
						&.bg-morado
							background-color $morado
							border 5px solid $morado
						&:after 
							display block
			&:hover 
				input 
					& ~ .icon-checkmark 
						background-color #ccc
			.icon-checkmark 
				&:after 
					background #fff
					border-radius 50%
					height 8px
					left 9px
					width 8px
					top 9px
		.icon-checkmark 
			background-color #575757
			border-radius 100%
			border 5px solid #929192
			display block
			height 24px
			left 0
			position absolute
			top 0
			transition .4s linear
			width 24px
		.checkmark 
			&:after 
				content ""
				display none
				position absolute
