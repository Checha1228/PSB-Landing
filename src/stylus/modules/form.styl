.form-program
	margin 25px auto 0
	width 90%

    .group-form
		display inline-block
		height 65px
		position relative
		width 100%
		
		input:focus ~ label,
		select:focus ~ label,
		input:valid ~ label,
		select:valid ~ label
			appearance none
			color $moradopsb
			font-size 64%
			font-weight $bold
			left 0		
			top 14px
			transform translate3d(0, -208%, 0)
		
		.label-default
			color $grisclaro
			font-family $robot
			font-size 0.8rem
			font-weight $light
			left 12px
			position absolute
			top 9px
			transition all 0.4s
		
		.input-default,
		.select-default
			appearance none
			border 1px solid $grisclaro
			border-radius 12px
			color $grisclaro
			font-family $roboto
			font-size 0.8rem
			font-weight $light
			height 30px
			padding 0 8px
			width 96%
		
		.select-default
			appearance none
			width 100%

			&.arrow-select
				background-image linear-gradient(to top right, transparent 50%, gray 50%), linear-gradient(to bottom right, gray 50%, transparent 50%)
				background-position calc(100% - 20px) calc(1em + 2px), calc(100% - 15px) calc(1em + 2px), calc(100% - .5em) .5em
				background-size 5px 5px, 5px 5px, 1.5em 1.5em
				background-repeat no-repeat

		input.error,
		select.error
			animation shake 0.82s cubic-bezier(.36,.07,.19,.97) both
			transform translate3d(0, 0, 0)
			backface-visibility hidden
			perspective 1000px
		
		i.error
			position absolute
			bottom 18px
			left 12px
			color $rojo
			font-size 50%
			font-weight $bold

		.cont-check-terms
			display block
			cursor pointer
			font-size 22px
			height 22px
			margin 20px auto
			padding-left 44px
			position relative
			user-select none
			width 80%

			.text-input-terms
				color $grisclaro
				font-weight $light
				font-size 0.9rem
			input 
				cursor pointer
				opacity 0
				position absolute
				&:checked 
					& ~ .icon-checkmark 
						background-position 2px 5px 
						background-image url('../images/img-icon-checkmark.png')
						background-repeat no-repeat 
						background-color $blanco
						border 5px solid $blanco
						
						&:after 
							display block
			&:hover 
				input 
					& ~ .icon-checkmark 
						background-color #ccc
			.icon-checkmark 
				&:after 
					background #fff
					border-radius 50%
					height 8px
					left 9px
					width 8px
					top 9px
		.icon-checkmark 
			background-color #575757
			border-radius 100%
			border 5px solid #929192
			display block
			height 24px
			left 0
			position absolute
			top 0
			transition .4s linear
			width 24px
		.checkmark 
			&:after 
				content ""
				display none
				position absolute
