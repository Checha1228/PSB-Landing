.icon-arrow-btn
	background-color $amarillo
	color $blanco
	font-family $roboto
	font-size 1.8rem
	font-weight $light
	height 34px
	position absolute
	right 0
	top 0
	text-align center
	width 34px

.icon-hamburger
	cursor pointer
	height 40px
	margin-top 30px
	width 30px

	i 
		background-color $moradopsb
		border-radius 2px
		content ''
		display block
		height 4px
		margin-bottom 6px
		width 100%

		&:nth-child(1) 
			animation outT 0.8s backwards
			animation-direction reverse
		&:nth-child(2) 
			animation outM 0.8s forwards
			animation-direction reverse
		&:nth-child(3) 
			animation outBtm 0.8s forwards
			animation-direction reverse
	
	&.active
		i
			&:nth-child(1)
				animation inT 0.8s forwards
		
			&:nth-child(2)
				animation inM 0.8s forwards
		
			&:nth-child(3)
				animation inBtm 0.8s forwards
	
.icon-arrow
	border solid $moradopsb
	border-width 0 3px 3px 0
	display inline-block
	padding 3px
	position absolute
	right 20px
	transform rotate(-45deg)
