.cont-intro-program-psb
    display flex
    flex-direction column
    padding 20px 0

.cont-title-program
    color $blanco
    text-align center

    .text-type-program
        font-size 0.8rem
        font-weight $normal
        margin 0
        text-transform uppercase

    .title-program
        font-size 1.6rem
        font-weight $normal
        margin 6px 0 0
    
    .text-resolution-program
        font-size 0.6rem
        font-weight $light
        margin 4px 0 0 

.cont-list-program
    .list-header-program
        list-style none
        margin 30px 0 0  
        padding 0

        .item-list-header
            display flex 
            flex-direction row 
            margin-bottom 20px

            &:last-child
                margin-bottom 0

            .icon-check
                margin-right 10px
                width 20px 

            .text-list-program
                font-size 1rem
                font-weight $light
                margin 0 
                width 90%

.cont-social-psb
    .title-name-social
        display none

.cont-form-program
    background $grisclaro1
    border-radius 12px
    padding 20px 0
    width 100%

    .title-form-program
        font-size 1.6rem 
        font-weight $light   
        margin 0 auto 10px
        text-align center
        width 90%
    
    .intro-form-program
        color $gris
        font-size 1.2rem
        font-weight $light
        margin 0 auto
        text-align center 
        width 60%

.detail-payment
    display flex
    flex-direction row
    margin 0 auto 40px
    width 80%

    .icon-check
        margin-right 20px
        width 40px
    
    .text-detail-payment
        font-family $roboto
        font-weight $light
        text-transform uppercase
        margin 0
